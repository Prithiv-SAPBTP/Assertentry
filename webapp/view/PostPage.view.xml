            <Table id="personnelTable"
       inset="false"
       items="{oModel>/}"
       includeItemInSelection="true"
       mode="MultiSelect"
       class="fancyTable"
       selectionChange="onTableSelectionChange">

    <headerToolbar>
        <Toolbar>
            <Title text="Person Data" level="H3"/>
            <ToolbarSpacer/>
            <Button text="Get Approval" icon="sap-icon://approvals" press="onPressGetapprove" />
        </Toolbar>
    </headerToolbar>

    <columns>
        <Column><Text text="Personnel Number"/></Column>
        <Column><Text text="Username"/></Column>
        <Column><Text text="Sequential Number"/></Column>
        <Column><Text text="Mail ID"/></Column>
        <Column><Text text="Start Date"/></Column>
        <Column><Text text="End Date"/></Column>
        <Column><Text text="Period Parameters"/></Column>
        <Column><Text text="Payroll Year"/></Column>
        <Column><Text text="Payroll Period"/></Column>
        <Column><Text text="Start Date of For-Period"/></Column>
        <Column><Text text="End Date of For-Period"/></Column>
    </columns>

    <items>
        <ColumnListItem>
            <cells>
                <Text text="{oModel>Pernr}"/>
                <Text text="{oModel>Username}"/>
                <Text text="{oModel>Seqnr}"/>
                <Text text="{oModel>MailId}"/>
                <Text text="{ path: 'oModel>Begda',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: { pattern : 'dd/MM/YYYY'}}"/>
                <Text text="{ path: 'oModel>Endda',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: { pattern : 'dd/MM/YYYY'}}"/>
                <Text text="{oModel>Permo}"/>
                <Text text="{oModel>Pabrj}"/>
                <Text text="{oModel>Pabrp}"/>
                <Text text="{ path: 'oModel>Fpbeg',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: { pattern : 'dd/MM/YYYY'}}"/>
                <Text text="{ path: 'oModel>Fpend',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: { pattern : 'dd/MM/YYYY'}}"/>
            </cells>
        </ColumnListItem>
    </items>
</Table>



