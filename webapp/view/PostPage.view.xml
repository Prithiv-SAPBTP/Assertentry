<mvc:View controllerName="assertentry.controller.PostPage"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
   <l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Label text="Person ID :" labelFor="" />
		<Input id=""
			placeholder="Enter person id"
			showSuggestion="true"
			suggestionItems=""
            width="25%" 
            selectedKey="person_id">
			<suggestionItems>
				<core:ListItem text="{Name}" additionalText="{SupplierName}" />
			</suggestionItems>
		</Input>
	</l:VerticalLayout>
</mvc:View>